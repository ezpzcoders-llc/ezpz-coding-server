{
    "compilerOptions": {
        "lib": ["es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
